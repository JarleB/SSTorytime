#!/bin/sh

#
# This should eventually automate the test cases once the software details become stable
# For now, as things are changing, tests need to be run manually
#

PROG="../src/N4L -v"

# test_1 no section error - fail

if $PROG test_1.in > test_1.out; 
then 
delta="`diff test_1.out test_1.cmp`"
if [$delta -eq ""]; then
echo pass test_1
else
echo fail
fi
fi



